* {
	font-size: 20px;
	font-family: monospace;
}
/* shamelessly stolen and modified from here: https://github.com/cjbassi/config/tree/master/.config/waybar */

window#waybar {
	background-color: #1a1a1a;
	color: #cbbc3b; /*text color*/
}

#custom-right-arrow-dark,
#custom-left-arrow-dark {
	color: #2b2b2b;
}
#custom-right-arrow-light,
#custom-left-arrow-light {
	color: #1a1a1a; /*#1a1a1a;*/
	background: #2b2b2b;
}
#network,
#workspaces,
#custom-weekday,
#clock.2,
#clock.3,
#pulseaudio,
#memory,
#cpu,
#battery,
#custom-wattage,
#tray {
	background: #2b2b2b;
}

#workspaces button {
	padding: 0 2px;
	color: #fdf6e3;
}
#workspaces button.focused {
	color: #268bd2;
}
#workspaces button:hover {
	box-shadow: inherit;
	text-shadow: inherit;
}
#workspaces button:hover {
	background: #1a1a1a;
	border: #1a1a1a;
	padding: 0 3px;
}

#workspaces button.active {
	background-color: #2b2b2b;
	color: #cbbc3b;
	/*box-shadow: inset 0 -3px #cbbc3b;*/
}

