#custom-wattage.low {
    color: #00ff31;
}

#custom-wattage.medium {
    color: #f6ff00;
}

#custom-wattage.high {
    color: #ff0000;
}

#clock,
#pulseaudio,
#memory,
#cpu,
#battery,
#disk {
	padding: 0 10px;
}


window#waybar.left {
	background: transparent;
}
window#waybar.bottom {
	background: transparent;
}

